<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DETAIL PRODUCT</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <%- include('../header2.ejs')%>

    <div class="e-address">
        <button class="address">
            <i class="fas fa-map-marker-alt fa-lg"> </i>
            <p class="Send"> London HA9 0WS, Reino Unido</p>
        </button>
    </div>
    <main class="todo-productos-main">

        
            <br>
            <section class="contenedor">



                <article class="contenedorproducto">
                    <h2 class="h2-nombre">
                        <%= prodEncontrado.name %>

                    </h2>

                    <article class="article-main">

                        <article class="imagen-nombre-main">
                            <div class="imagen-div">
                                <img src="/images/<%= prodEncontrado.image; %>" alt="Producto" id="img-main">
                                <div class="descuento"><span id="discount" data-action="cart-can"
                                        class="badge rounded-circle">
                                        <%= prodEncontrado.discount; %>%
                                    </span>
                                </div>
                            </div>

                            <div class="descriptions-main">

                                <%= prodEncontrado.description; %>

                            </div>

                            <div class="button-box">
                                <button class="button-main" id="buttonmain">
                                    <%= prodEncontrado.category; %>
                                </button>

                                <button class="button-main">
                                    $<%= Math.round(prodEncontrado.price - prodEncontrado.discount/100 *
                                    prodEncontrado.price); %>
                                </button>

                                <button class="button-main" id="buttonmain">
                                    Stock : <%= prodEncontrado.stock; %>
                                </button>
                                <div>
                                    <a href="/productos/<%= prodEncontrado.id; %>/edit"><i class="far fa-edit"></i></a>
                                </div>

                            </div>
                        </article>
                    </article>
                </article>
                <br>
            </section>
            <div class="detail-imagePC">
                <br><br>
                <section class="main-detail-section2">
            <article class="nav-image-detail">
                <img id="particular-detail-image" src="/images/<%= prodEncontrado.image; %>" alt="articulo">
                <img id="particular-detail-image" src="/images/<%= prodEncontrado.image; %>" alt="articulo">
                <img id="particular-detail-image" src="/images/<%= prodEncontrado.image; %>" alt="articulo">
                <img id="particular-detail-image" src="/images/<%= prodEncontrado.image; %>" alt="articulo">
            </article>
           
        </section>
           </div> <br>
    </main>

    <%- include('../footer.ejs') %>

</body>

</html>